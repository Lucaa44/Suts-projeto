generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  cpf       String   @unique @default("")  // Valor padrão vazio
  password  String
  bloodType String   @default("Unknown")   // Valor padrão "Unknown"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}



model Hospital {
  id         Int      @id @default(autoincrement())
  cnpj       String      @unique
  name       String
  email      String   @unique
  phone      String
  address    String
  specialties String
  vacancies  Vacancy[]
}

model Vacancy {
  id          Int      @id @default(autoincrement())
  bloodType   String
  quantity    Int
  urgency     String
  deadline    DateTime
  description String
  location    String
  contact     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  hospitalId  Int
  hospital    Hospital @relation(fields: [hospitalId], references: [id])
}



